<div class="container">
  <div class="row">
    <div class="col">
      <div class="sign-title">
        <h3>管理者</h3>
      </div>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="form-group sign-form">
        <table class="table devise-table">
          <tr>
            <th class="col-xs-5">メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
          </tr>

          <tr>
            <th class="col-xs-5">パスワード</th>
            <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
          </tr>
        </table>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <div class="sign-submit">
        <%= f.submit "ログイン" ,class: "btn btn-lg btn-primary btn-block" %>
      </div>
    </div>
  </div>
  <% end %>
</div>