<div class="container">
	<div class="row">
		<h3>ジャンル追加・一覧画面</h3>

		<%= render 'admin/genres/genre_form', genre: @genre %>

	</div>

	<div class="row">
		<div class="col-xs-5">
			<table class="table">
				<thead>
					<tr>
						<th>ジャンル名</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td><%= genre.is_valid %></td>
						<td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

