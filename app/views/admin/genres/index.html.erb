<div class="container">
	<div class="row">
		<h3>ジャンル追加・一覧画面</h3>

		<%= form_for [:admin, @genre] do |f| %>
		<%= render 'layouts/error_messages', model: f.object %>

		<div class="col-xs-3">
			<%= f.label :ジャンル名 %>
			<%= f.text_field :name, class: "form-control" %>
		</div>

		<div class="col-xs-3">
			<div class="genre-field">
				<%= f.radio_button :is_valid, :有効 %>
				<%= f.label :有効 %>
				<%= f.radio_button :is_valid, :無効 %>
				<%= f.label :無効 %>
				<%= f.submit "追加" %>
			</div>
		</div>
		<% end %>
	</div>

	<div class="row">
		<div class="col-xs-5">

			<table class="table">
				<thead>
					<tr>
						<th>ジャンル名</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td><%= genre.is_valid %></td>
						<td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
					</tr>
				<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>

