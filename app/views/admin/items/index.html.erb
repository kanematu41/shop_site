<div class="container">
	<div class="row">
		<div class="col">
			<h3>商品一覧画面</h3>

			<%= link_to "追加", new_admin_item_path, class: "pull-right" %>

			<table class="table">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @items.each do |item| %>
					<tr>
						<td><%= item.id %></td>
						<td><%= item.name %></td>
						<td><%= item.non_tax_price %></td>
						<td><%= item.genre_id %></td>
						<td><%= item.order_status %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>
