<div class="container">
	<div class="row">
		<div class="col">
			<h3>商品一覧画面</h3>

			<%= link_to "追加", new_admin_item_path, class: "pull-right" %>

			<table class="table">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税込価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @items.each do |item| %>
					<tr>
						<td><%= item.id %></td>
						<td><%= link_to admin_item_path(item) do %>
									<%= item.name %>
								<% end %>
						</td>
						<td><%= (item.non_tax_price * @tax).floor.to_s(:delimited) %>
								(<%= item.non_tax_price.to_s(:delimited) %>)
						</td>
						<td><%= item.genre.name %></td>
						<td><%= item.is_valid %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>
