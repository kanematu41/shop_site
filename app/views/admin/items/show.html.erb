<div class="container">
	<h3>詳細画面</h3>
	<div class="row">
		<div class="col-xs-6">
			<div align="center">
				<%= attachment_image_tag @item, :image, size: "300x300" %>
			</div>
		</div>

		<div class="col-xs-6">
			<div class="item-show">
				<h4><label>商品名 : <%= @item.name %></label></h4>
				<h4><label>商品説明 : <%= @item.detail %></label></h4>
				<h4><label>ジャンル : <%= @item.genre.name %></label></h4>
				<h4><label>税込価格 : <%= (@item.non_tax_price * @tax).floor.to_s(:delimited) %>
									(<%= @item.non_tax_price.to_s(:delimited) %>) 円</label></h4>
				<h4><label>販売状況 : <%= @item.is_valid %></label></h4>
				<%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>


