<div class="container">
	<div class="row">
		<div class="col">
			<h3>注文履歴</h3>
			<table class="table">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文状況</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td><%= order.created_at.strftime('%Y年%m月%d日%H:%M') %></td>
						<td><%= order.end_user.first_name + order.end_user.last_name %></td>
						<td><%= order.total_quantity %></td>
						<td><%= link_to admin_order_path(order) do %>
								<%= order.order_status %>
								<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>