<div class="container">
	<div class="row">
		<div class="col">
			<h3>カート内</h3>
			<table class="table">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @cart_items.each do |cart_item| %>
					<tr>
						<td><%= cart_item.item.name %></td>
						<td><%= (cart_item.item.non_tax_price * @tax).floor.to_s(:delimited) %></td>
						<td>
							<%= form_for(cart_item) do |f| %>
							<%= f.select :quantity, (1..5) %>
							<%= f.submit "更新" %>
							<% end %>
						</td>
						<td><%= (cart_item.item.non_tax_price * cart_item.quantity * @tax).floor.to_s(:delimited) %></td>
						<td><%= link_to "削除", cart_item_path(cart_item), method: :delete %></td>
					</tr>
					<% end %>
				</tbody>
			</table>