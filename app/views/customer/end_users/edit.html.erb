<div class="container">
	<div class="row">
		<div class="col">
			<h3>登録情報変更</h3>
		</div>
	</div>

	<%= form_for(@end_user) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>
  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>名前</p>
    </div>
    <div class="col-xs-1">
      <div class="name">
        <p>(性)</p>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="sign-field">
        <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-1">
      <div class="name">
        <p>(名)</p>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="sign-field">
        <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>フリガナ</p>
    </div>
    <div class="col-xs-1">
      <div class="name">
        <p>(セイ)</p>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="sign-field">
        <%= f.text_field :first_kana_name, autocomplete: "first_kana_name", class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-1">
      <div class="name">
        <p>(メイ)</p>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="sign-field">
        <%= f.text_field :last_kana_name, autocomplete: "last_kana_name", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>メールアドレス</p>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="sign-field">
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="sign-field">
        <%= f.text_field :postcode, autocomplete: "postcode", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>住所</p>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="sign-field">
        <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
     </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>電話番号(ハイフンなし)</p>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="sign-field">
        <%= f.text_field :phone_number, autocomplete: "phone_number", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-4">
      <%= f.submit "保存する", class: "btn btn-primary btn-block" %>
    </div>
    <div class="col-xs-2">
      <%= link_to "退会する", confirm_end_user_path(@end_user), class: "btn btn-danger btn-block pull-right" %>
    </div>
    </div>
  </div>
  <% end %>
