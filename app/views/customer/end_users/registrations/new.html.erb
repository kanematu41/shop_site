<div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-1">
      <div class="sign-title">

        <h2>新規会員登録</h2>

      </div>
    </div>
  </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>名前</p>
    </div>
    <div class="col-xs-1">
      <div class="name">
        <p>(性)</p>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="sign-field">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-1">
      <div class="name">
        <p>(名)</p>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="sign-field">
        <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>フリガナ</p>
    </div>
    <div class="col-xs-1">
      <div class="name">
        <p>(セイ)</p>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="sign-field">
        <%= f.text_field :first_kana_name, autocomplete: "first_kana_name", class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-1">
      <div class="name">
        <p>(メイ)</p>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="sign-field">
        <%= f.text_field :last_kana_name, autocomplete: "last_kana_name", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>メールアドレス</p>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="sign-field">
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="sign-field">
        <%= f.text_field :postcode, autocomplete: "postcode", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>住所</p>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="sign-field">
        <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
     </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>電話番号(ハイフンなし)</p>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="sign-field">
        <%= f.text_field :phone_number, autocomplete: "phone_number", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p>パスワード(6文字以上)</p>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="sign-field">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <p> パスワード(確認用)</p>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="sign-field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-5">
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-3 col-xs-offset-1">
      <h4>既に登録済みの方</h4>
        <%= link_to 'こちら', new_end_user_session_path %> からログインしてください
    </div>
  </div>
</div>