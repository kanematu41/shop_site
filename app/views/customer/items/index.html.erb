<div class="container">
	<div class="row">
		<div class="col col-xs-offset-1">
			<h3>商品一覧</h3>

			<% @items.each do |item| %>
			<div class="item-box">
				<%= attachment_image_tag item, :image, size: "200x200", format: "jpeg" %>
				<div class="item-title">
					<%= link_to item_path(item) do %>
					<%= item.name %>
					<% end %><br>
					￥ <%= item.non_tax_price.floor.to_s(:delimited) %>
				</div>
			</div>
			<% end %>

		</div>
	</div>
</div>