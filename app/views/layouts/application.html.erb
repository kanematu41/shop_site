<!DOCTYPE html>
<html>
  <head>
    <title>ShopSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar">
        <div class="container">
          <div class="navbar-header">
            <% if admin_admin_signed_in? %>
              <%= link_to admin_root_path do %><h3>LOGO</h3><% end %>
            <% else %>
              <%= link_to root_path do %><h3>LOGO</h3><% end %>
            <% end %>
          </div>

          <ul class="nav navbar-nav navbar-right">
            <% if admin_admin_signed_in? %>
              <li><%= link_to "商品一覧", admin_items_path %></li>
              <li><%= link_to "会員一覧", admin_end_users_path %></li>
              <li><%= link_to "注文履歴一覧", admin_orders_path %></li>
              <li><%= link_to "ジャンル一覧", admin_genres_path %></li>
              <li><%= link_to "ログアウト", destroy_admin_admin_session_path, method: :delete %></li>
            <% elsif end_user_signed_in? %>
              <li><%= link_to "マイページ", end_user_path(current_end_user) %></li>
              <li><%= link_to "商品一覧", items_path %></li>
              <li><%= link_to "カート", cart_items_path %></li>
              <li><%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "商品一覧", items_path %></li>
              <li><%= link_to "新規登録", new_end_user_registration_path %></li>
              <li><%= link_to "ログイン", new_end_user_session_path %></li>
              <li><%= link_to "管理者", new_admin_admin_session_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
